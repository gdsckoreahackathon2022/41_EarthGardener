<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:context=".presentation.user.login.LoginActivity">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="25sp"
            android:fontFamily="@font/suit_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/suit_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_email"
            android:layout_marginTop="10dp"
            android:hint="@string/email_hint"/>

        <TextView
            android:id="@+id/tv_login_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pw"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/suit_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_email"
            android:layout_marginTop="100dp"/>
        <EditText
            android:id="@+id/et_login_pw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_pw"
            android:layout_marginTop="10dp"
            android:hint="@string/pw_hint"
            android:inputType="textPassword"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/background_white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/suit_medium"
            android:background="@drawable/rectangle_primary_green_radius_30"
            app:layout_constraintTop_toBottomOf="@+id/et_login_pw"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tv_login_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/suit_medium"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_login_find_pw"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_login_find_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_pw"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/suit_medium"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_login_sign_up"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

